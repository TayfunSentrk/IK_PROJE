@model List<DepartmentViewModel>




<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Departmant Listesi</h4>
            <a asp-controller="Department" asp-action="DepartmentCreate" class="btn btn-primary btn-sm">Departmant Ekle</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example3" class="display" style="min-width: 845px">
                    <thead>
                        <tr>
                            <th style="display:none">Departmant Id</th>
                            <th>Departmant Adı</th>
                            <th>İşlemler</th>
                            


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="display:none;">@item.Id</td>
                                <td>@item.Name</td>
                                
                                <td>
                                    <div class="d-flex">
                                        <a asp-controller="Department" asp-action="DepartmentEdit" asp-route-id="@item.Id" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                        <a asp-controller="Department" asp-action="DepartmentDelete" asp-route-id="@item.Id" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



