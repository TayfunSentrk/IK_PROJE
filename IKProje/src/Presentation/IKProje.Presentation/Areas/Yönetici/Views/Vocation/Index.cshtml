


@model List<VocationViewModel>




<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Meslek Listesi</h4>
            <a asp-controller="Vocation" asp-action="VocationCreate" class="btn btn-primary btn-sm">Meslek Ekle</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example3" class="display" >
                    <thead>
                        <tr>
                            <th style="display:none">Meslek Id</th>
                            <th>Meslek Adı</th>
                            <th>İşlemler</th>
                        



                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="display:none;">@item.Id</td>
                                <td>@item.Name</td>
                      

                                <td>
                                    <div class="d-flex">
                                        <a asp-controller="Vocation" asp-action="VocationEdit" asp-route-id="@item.Id" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                        <a asp-controller="Vocation" asp-action="VocationDelete" asp-route-id="@item.Id" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




