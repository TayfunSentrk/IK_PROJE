@using IKProje.Application.Features.RoleFeatures.RoleCommands.RoleCreate;


@model RoleCreateCommand
<hr />

<style>

    .input-group {
        margin-top: 10px;
    }
</style>

<div class="col-xl-6 col-lg-6">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Rol Ekle</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                <form asp-asp-area="Admin" asp-controller="Roles" asp-action="RoleCreate" method="post">
                    <div class="input-group input-warning-o">
                        <span class="input-group-text">Rol Adı</span>
                        <input class="form-control" asp-for="Name" placeholder="Rol Adı Giriniz" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>


                    <div class="col-12" style="margin-top: 10px">
                        <button type="submit" class="btn btn-primary mb-2">Rol Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


