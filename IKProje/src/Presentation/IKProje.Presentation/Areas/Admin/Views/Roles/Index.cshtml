@using IKProje.Application.ViewModels.Roles;




@model IEnumerable<RoleViewModel>


<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Rol Listesi</h4>
            <a asp-controller="Roles" asp-action="RoleCreate" asp-area="Admin" class="btn btn-primary btn-sm">Rol Ekle</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example3" class="display" style="min-width: 845px">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>RoleName</th>
                         


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="display:none;">@item.Id</td>
                                <td>@item.Name</td>
                              
                                <td>
                                    <div class="d-flex">
                                        <a asp-area="admin" asp-action="RoleEdit" asp-controller="Roles" asp-route-id="@item.Id" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                        <a asp-area="admin" asp-action="RoleRemove" asp-controller="Roles" asp-route-id="@item.Id" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                        
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
