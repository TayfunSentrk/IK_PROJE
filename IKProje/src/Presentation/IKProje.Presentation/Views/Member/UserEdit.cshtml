@model PersonelInformationForEdit

<div class="row">
    <div class="col-md-6 offset-md-3">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Message"]
            </div>
        }
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Personel Güncelleme</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-form custom_file_input">
                                <form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
                                    </div>

                                    <div class="input-group mb-3 input-warning-o">
                                        <span class="input-group-text">Adres</span>
                                        <input type="text" class="form-control" asp-for="Address" placeholder="Adres">
                                        <span class="text-danger" asp-validation-for="Address"></span>
                                    </div>

                                    <div class="input-group mb-3 input-warning-o">
                                        <span class="input-group-text">Telefon Numarası</span>
                                        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Telefon Numarası">
                                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                    </div>

                                    <div class="input-group">
                                        <div class="form-file">
                                            <label for="Picture" class="col-sm-6 col-form-label" asp-for="Picture"> Dosyanızın Türü: jpg, jpeg, png </label>
                                            <input type="file" asp-for="Picture" class="form-file-input form-control">
                                            <span class="text-danger" asp-validation-for="Picture"></span>
                                        </div>
                                    </div>

                                    <div class="col-12 mt-2">
                                        <button type="submit" class="btn btn-primary mb-2">Güncelle</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

