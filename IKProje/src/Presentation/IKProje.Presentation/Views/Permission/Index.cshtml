@model List<PermissionViewModel>


    <style> 
        tr,td{
            text-align:center!important;
        }
    </style>

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">İzin Listesi</h4>
            <a asp-controller="Permission" asp-action="PermissionCreate" class="btn btn-primary btn-sm">İzin Ekle</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example3" class="display" style="min-width: 845px">
                    <thead>
                        <tr>
                            <th style="display:none">İzin Id</th>
                            <th>İzin Adı</th>
                            <th>Talep Tarihi</th>
                            <th>Cevaplanma Tarihi</th>
                            <th>Başlangıç Tarihi</th>
                            <th>Bitiş Tarihi</th>
                            <th>Gün Sayısı</th>
                           @* <th>İzin Türü</th>*@

                            <th>İşlemler</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="display:none;">@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.RequestDate</td>
                                <td>
                                @if (item.DateofReply == new DateTime(1, 1, 1))
                                {
                                    <span>Cevaplanmadı</span>
                                }
                                else
                                {
                                    @item.DateofReply
                                }
                                </td>
                                <td>@item.StartedDate</td>
                                <td>@item.FinishedDate</td>
                                <td>@item.DayCount</td>
                               @* <td>
                                    @item.TypeofPermissionViewModel.Name
                                </td>*@
                               
                                <td>
                                    <div class="d-flex">
                                        <a asp-controller="Permission" asp-action="PermissionEdit" asp-route-id="@item.Id" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                        <a asp-controller="Permission" asp-action="PermissionDelete" asp-route-id="@item.Id" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



   

