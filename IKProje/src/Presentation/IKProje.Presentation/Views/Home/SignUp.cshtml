@model PersonelCreateCommand


<style>

    label{
        color: #ffa755!important;
    
    }

</style>

@if (@ViewBag.Message!=null)
{
    <div class="alert alert-danger" style="text-align:center;">
        @ViewBag.Message
    </div>
}        


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header" style="text-align: center; display:flex; justify-content:center;">
                    <h4 class="card-title">
                        Personel Kayıt
                    </h4>
                </div>

                <div class="card-body">

                    <form form asp-action="SignUp" asp-controller="Home" method="post" class="form" style="margin:0 10%;">
                      @*  @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @TempData["Message"]
                            </div>
                        }*@

                        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
                        </div>

                        <div class="column">
                            <div class="input-box">
                                <label asp-for="@Model.FirstName">İlk İsim</label>
                                <input type="text" asp-for="@Model.FirstName" placeholder="Lüften İsmi Giriniz"  />
                                <span class="text-danger" asp-validation-for="@Model.FirstName"></span>
                            </div>
                            <div class="input-box">
                                <label asp-for="@Model.SecondName">İkinci İsim</label>
                                <input type="text" asp-for="@Model.SecondName" placeholder="İkinci İsim Var İse Giriniz" />
                                <span class="text-danger" asp-validation-for="@Model.SecondName"></span>
                            </div>
                        </div>
                       
                        <div class="column">
                            <div class="input-box">
                                <label asp-for="@Model.LastName">Soy İsim</label>
                                <input type="text" asp-for="@Model.LastName" placeholder="Lüften Soyİsminizi Giriniz"  />
                                <span class="text-danger" asp-validation-for="@Model.LastName"></span>
                            </div>

                            <div class="input-box">
                                <label asp-for="@Model.SecondLastName">İkinci Soyisim</label>
                                <input type="text" asp-for="@Model.SecondLastName" placeholder="İkinci Soyİsim Var İse Giriniz" />
                                <span class="text-danger" asp-validation-for="@Model.SecondLastName"></span>
                            </div>

                         
                        </div>

                        <div class="column">
                            <div class="input-box">
                                <label asp-for="@Model.TCIdentityNumber">TC Kimlik Numarası</label>
                                <input type="text" asp-for="@Model.TCIdentityNumber" placeholder="Tc Numaranızı Giriniz"  />
                                <span class="text-danger" asp-validation-for="@Model.TCIdentityNumber"></span>
                            </div>
                            <div class="input-box input-box1">
                                <label asp-for="@Model.PhoneNumber">Telefon Numarası</label>
                                <input type="text" asp-for="@Model.PhoneNumber" id="PhoneNumber" name="PhoneNumber" placeholder="Telefon Numarasını Giriniz" onkeyup="formatPhoneNumber(this)"  />
                                <span class="text-danger" asp-validation-for="@Model.PhoneNumber"></span>
                            </div>
                        </div>
                      

                        <div class="column">
                         

                            <div class="input-box">
                                <label asp-for="@Model.BirthDate">Doğum Tarihi</label>
                                <input type="date" asp-for="@Model.BirthDate" placeholder="Doğum Tarihinizi Giriniz"  />
                                <span class="text-danger" asp-validation-for="@Model.BirthDate"></span>
                            </div>

                            <div class="input-box">
                                <label asp-for="@Model.PlaceOfBirth">Doğum Yeri</label>
                                <input type="text" asp-for="@Model.PlaceOfBirth" placeholder="Doğum Yerinizi Giriniz"  />
                                <span class="text-danger" asp-validation-for="@Model.BirthDate"></span>
                            </div>

                        </div>

                                             
                        <div class="column">

                            <div class="input-box">

                                <label asp-for="@Model.Address">Adres</label>
                                <input type="text" asp-for="@Model.Address" placeholder="Adresi Giriniz" />
                                <span class="text-danger" asp-validation-for="@Model.Address"></span>
                            </div>
                            <div class="input-box">
                                <label>Meslek</label>
                                <div class="mb-3 select-box">

                                    <select asp-for="@Model.VocationId">
                                        @foreach (var item in ViewBag.vocationViewModels)
                                        {
                                            <option value="@item.Id">
                                                @item.Name
                                            </option>
                                        }

                                    </select>
                                </div>
                            </div>
                        </div>


                            <div class="column">
                                <div class="input-box">
                                    <label>Cinsiyet</label>
                                    <div class="mb-3 select-box">

                                        <select asp-for="@Model.Gender">
                                            @foreach (var item in ViewBag.Gender)
                                            {
                                                <option value="@item.Value">
                                                    @item.Text
                                                </option>
                                            }

                                        </select>
                                    </div>
                                </div>


                            <div class="input-box">
                                <label>Depertmant</label>
                                <div class="mb-3 select-box">

                                    <select asp-for="@Model.CompanyId" class="">

                                        @foreach (var item in ViewBag.companyViewModel)
                                        {
                                            <option value="@item.Id">
                                                @item.Name
                                            </option>
                                        }
                                    </select>
                                </div>
                            </div>

                           

                            
                        </div>

                      
                        <div class="column">
                            <div class="input-box">
                                <label>Depertmant</label>
                                <div class="mb-3 select-box">

                                    <select asp-for="@Model.DepartmanId" class="">

                                        @foreach (var item in ViewBag.departmentViewModels)
                                        {
                                            <option value="@item.Id">
                                                @item.Name
                                            </option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="input-box">
                                <label asp-for="@Model.Salary">Maas</label>
                                <input type="text" asp-for="@Model.Salary" placeholder="Maası Giriniz"  />
                                <span class="text-danger" asp-validation-for="@Model.Salary"></span>
                            </div>
                        </div>

                      <div class="column">
                            <div class="input-box">
                                <label asp-for="@Model.Password">Sifre</label>
                                <input type="password" asp-for="@Model.Password" placeholder="Sifre Giriniz"  />
                                <span class="text-danger" asp-validation-for="@Model.Password"></span>
                            </div>

                            <div class="input-box">
                                <label asp-for="@Model.PasswordConfirm">Sifre Tekrar</label>
                                <input type="password" asp-for="@Model.PasswordConfirm" placeholder="Şifreyi Tekrar Giriniz"  />
                                <span class="text-danger" asp-validation-for="@Model.PasswordConfirm"></span>
                            </div>

                        </div>
                                                                                        
                        <div style="text-align:right;">
                              <button type="submit" class="btn btn-primary">Çalışanı Kaydet</button>
                        </div>
                      
                        @* <a class="" asp-controller="Home" asp-action="SignIn">Back</a> *@
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function formatPhoneNumber(input) {
        var num = input.value.replace(/\D/g, '');
        var newNum = '';
        if (num.length <= 3) {
            newNum = '(' + num;
        } else if (num.length <= 6) {
            newNum = '(' + num.substr(0, 3) + ')(' + num.substr(3);
        } else if (num.length <= 8) {
            newNum = '(' + num.substr(0, 3) + ')(' + num.substr(3, 3) + '-' + num.substr(6);
        } else if (num.length <= 10) {
            newNum = '(' + num.substr(0, 3) + ')(' + num.substr(3, 3) + '-' + num.substr(6, 2) + '-' + num.substr(8);
        }

        if (num.length >= 10) {
            newNum += ')';
        }

        input.value = newNum;
    }
</script>

