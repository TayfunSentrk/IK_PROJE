@using IKProje.Application.Features.PersonelFeatures.PersonelCommands.PersonelPasswordReset;


@{
    ViewData["Title"] = "PasswordReset";
}

@model PersonelPasswordResetCommand



<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Şifre Değiştirme Formu</h2>



        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Message"]
            </div>
        }

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>



        <form asp-controller="Home" asp-action="PasswordReset" method="post">




            <div class="row mb-3">
                <label for="Email" class="col-sm-4 col-form-label" asp-for="Email"></label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>



            <div class="row mb-3">

                <div class="col-sm-8 offset-sm-4">
                    <button type="submit" class="btn btn-primary">Şifre Değiştir</button>
                </div>
            </div>


        </form>
    </div>
</div>
